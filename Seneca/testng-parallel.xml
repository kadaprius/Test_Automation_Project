<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="E2E Parallel Suite" parallel="tests" thread-count="2" verbose="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="UI Test Cases 1-10" preserve-order="true">
        <classes>
            <class name="com.automationexercise.ui.tests.AuthUiTest"/>
            <class name="com.automationexercise.ui.tests.SignupAndContactUiTest"/>
            <class name="com.automationexercise.ui.tests.TestCasesAndProductsUiTest"/>
            <class name="com.automationexercise.ui.tests.SearchAndSubscriptionUiTest"/>
        </classes>
    </test>

    <test name="API Test Cases 1-10" preserve-order="true">
        <classes>
            <class name="com.automationexercise.api.tests.ProductsAndBrandsApiTest"/>
            <class name="com.automationexercise.api.tests.SearchProductApiTest"/>
            <class name="com.automationexercise.api.tests.VerifyLoginApiTest"/>
            <class name="com.automationexercise.api.tests.VerifyLoginNegativeApiTest"/>
        </classes>
    </test>
</suite>
